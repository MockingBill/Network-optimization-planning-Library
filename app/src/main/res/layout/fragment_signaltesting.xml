    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/znntitle"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/selectDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weakQuery_collTime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="时间"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_weight="0.8"
                android:background="@drawable/znnsign"
                android:gravity="center"
                android:padding="3dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/weakQuery_district"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="县市:"
                android:textSize="15sp"
                android:layout_height="35dp" />

            <Spinner
                android:id="@+id/weakQuery_district_value"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:padding="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/znnsign"
                android:entries="@array/disDataForColl"
                android:textSize="15dp"
                android:text=""
                android:layout_height="35dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="#4e4444"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/weakQuery_address"
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="详细地址:"
                android:textSize="15dp"
                android:layout_height="35dp" />

            <EditText
                android:id="@+id/weakQuery_address_value"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:padding="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/znnsign"
                android:textSize="16dp"
                android:text=""
                android:layout_height="35dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#4e4444"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="经度"
                android:textSize="15dp"
                android:layout_height="35dp" />
            <TextView
                android:id="@+id/GPS_lon"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:padding="3dp"
                android:layout_marginTop="8dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/znnsign"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="维度:"
                android:textSize="15sp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/GPS_lat"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:padding="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/znnsign"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textSize="15dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/weak_query"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="查询"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/weak_save"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="保存"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:background="@drawable/znntitle"
        android:orientation="vertical">
        <ListView android:id="@id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:divider="@null"
            android:orientation="vertical"/>


    </LinearLayout>
</LinearLayout>