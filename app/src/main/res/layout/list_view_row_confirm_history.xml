<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    android:paddingBottom="1dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/znntitle"
        android:orientation="vertical"
        android:paddingBottom="1dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="1dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:paddingBottom="1dip"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:paddingTop="1dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#aef422"
                android:singleLine="true"
                android:text="弱覆盖地址:"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/row_confirm_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#b2f574"
                android:gravity="right"
                android:singleLine="true"
                android:text="三穗县八弓镇书香明苑1栋2单元"
                android:textSize="5pt" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:paddingBottom="1dip"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:paddingTop="1dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#24f0f7"
                android:singleLine="true"
                android:text="预见站点名:"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/row_confirm_preName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#76cff1"
                android:gravity="right"
                android:singleLine="true"
                android:text="三穗县八弓镇书香明苑1栋2单元"
                android:textSize="5pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:paddingBottom="1dip"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:paddingTop="1dip">

            <TextView
                android:id="@+id/row_confirm_netmodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#f1c43a"
                android:gravity="center"
                android:singleLine="true"
                android:text="宏站"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/row_confirm_stpro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#6af746"
                android:gravity="center"
                android:singleLine="true"
                android:text="4G"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/row_confirm_buildType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#4af491"
                android:gravity="center"
                android:singleLine="true"
                android:text="2018-6-27"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/row_confirm_celNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7b85f2"
                android:gravity="center"
                android:singleLine="true"
                android:text="8 Km"
                android:textSize="5pt" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
